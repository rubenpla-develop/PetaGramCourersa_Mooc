<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@color/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_info_photo"
        android:layout_width="@dimen/altura_tarjeta1"
        android:layout_height="@dimen/altura_tarjeta1"
        android:background="@color/cardview_light_background"
        android:src="@drawable/shock_rave_icon"
        android:layout_marginTop="@dimen/profile_info_activity_avatar_photo_margin_top"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/profile_info_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="48dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_info_photo"
        android:textColor="@color/cardview_light_background"
        android:text="User name here"
        android:textSize="28sp"/>

</RelativeLayout>